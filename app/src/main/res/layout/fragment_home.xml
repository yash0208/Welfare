<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                android:fontFamily="@font/nunito"
                android:gravity="start"
                android:text="Welcome !"
                android:textColor="#080A26"
                android:textSize="22dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:fontFamily="@font/nunito_semibold"
                android:gravity="start"
                android:text="Sansad Adarsh,"
                android:textColor="#080A26"
                android:textSize="22dp" />
        </LinearLayout>

        <ViewFlipper
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/viewFlipper"
            android:autoStart="true"
            android:layout_height="260dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView1"
                app:riv_corner_radius="3dp"
                android:src="@drawable/m1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView2"
                app:riv_corner_radius="3dp"
                android:layout_width="match_parent"
                android:src="@drawable/m2"
                android:layout_height="match_parent"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView3"
                app:riv_corner_radius="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_border_color="#333333"
                android:src="@drawable/m3"
                app:riv_mutate_background="true"
                />
        </ViewFlipper>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"

            app:cardElevation="8dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/l11"
                android:layout_height="150dp"
                android:background="@drawable/categories_shops_background">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_gravity="right"
                    android:src="@drawable/sos"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/baloo"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="SOS \n Message"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="8dp">
            <FrameLayout
                android:id="@+id/l22"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/categories_restaurant_background">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:src="@drawable/map"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"

                    android:fontFamily="@font/baloo"
                    android:gravity="start"
                    android:padding="5dp"

                    android:text="Location \n Message"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>