<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38.3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="32dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_horizontal"
                    android:text="Let Us Help!"
                    android:textColor="#333232"
                    android:textSize="30sp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|bottom"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="7.3dp"
                        android:background="@drawable/small_cicle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/half_circle"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/half_circle" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:paddingLeft="14.5dp">
                <View
                    android:layout_width="5.6dp"
                    android:layout_height="match_parent"
                    android:background="#38b5f2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="35.6dp"
                    android:background="@drawable/rectangle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="19dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.3dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center_horizontal"
                            android:text="Basic Information!!"
                            android:textColor="#333232"
                            android:textSize="16.7sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22.3dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Your Name"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_semibold"
                            android:maxLength="10"
                            android:id="@+id/name"

                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#9e9e9e" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Email Address"
                            android:textColor="#9e9d9d"

                            android:textSize="12.3sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_semibold"
                            android:id="@+id/email"

                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="#333232"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp" />


                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="35dp"
                            android:background="#9e9e9e" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:paddingLeft="14.5dp">
                <View
                    android:layout_width="5.6dp"
                    android:layout_height="match_parent"
                    android:background="#38b5f2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="35.6dp"
                    android:background="@drawable/rectangle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="19dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.3dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center_horizontal"
                            android:text="Parental information!!"
                            android:textColor="#333232"
                            android:textSize="16.7sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22.3dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Guardian's Name"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_semibold"
                            android:id="@+id/parent"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#9e9e9e" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Contact Number"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_semibold"
                            android:id="@+id/pc"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="#333232"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp" />


                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="35dp"
                            android:background="#9e9e9e" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:paddingLeft="14.5dp">
                <View
                    android:layout_width="5.6dp"
                    android:layout_height="match_parent"
                    android:background="#38b5f2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="35.6dp"
                    android:background="@drawable/rectangle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="19dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.3dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center_horizontal"
                            android:text="Your Trustworthy!!"
                            android:textColor="#333232"
                            android:textSize="16.7sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22.3dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="First Contact"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_semibold"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:id="@+id/fc"
                            android:paddingTop="5dp"
                            android:inputType="phone"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#9e9e9e" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22.3dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Second Contact"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_semibold"
                            android:maxLength="10"
                            android:inputType="phone"
                            android:id="@+id/sc"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#9e9e9e" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22.3dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Third Contact"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_semibold"
                            android:maxLength="10"
                            android:id="@+id/tc"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:inputType="phone"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#9e9e9e" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Fourth Contact"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/poppins_semibold"
                                android:id="@+id/ffc"
                                android:inputType="phone"
                                android:maxLength="10"

                                android:maxLines="1"
                                android:textColor="#333232"
                                android:textCursorDrawable="@drawable/cursor_color"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="35dp"
                            android:background="#9e9e9e" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"

                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginTop="40.3dp"
                android:layout_marginBottom="16.7dp"
                android:background="@drawable/half_blue_roundshape"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Register Details"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"

                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginTop="40.3dp"
                android:layout_marginBottom="16.7dp"
                android:background="@drawable/half_blue_roundshape"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>